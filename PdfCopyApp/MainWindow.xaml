<Window x:Class="PdfCopyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfCopyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid x:Name="MainWindow1" RenderTransformOrigin="0.509,0.594" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="39*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF565656" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Height="68" Margin="43,593,0,0" VerticalAlignment="Top" Width="169" FontSize="24" Background="#FF57FF29" Click="Button_Start" RenderTransformOrigin="1.839,0.706" Grid.Column="1"/>
        <TextBox x:Name="Textbox1" HorizontalAlignment="Left" Height="42" Margin="34,10,0,0" TextWrapping="Wrap" Text="Aplikace převede vybrané části z pdf do text souboru.." VerticalAlignment="Top" Width="932" FontSize="24" TextAlignment="Center" Foreground="White" Grid.ColumnSpan="2">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF2D2D2D" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="fileOpen" Content="OpenFile" HorizontalAlignment="Left" Height="68" Margin="43,172,0,0" VerticalAlignment="Top" Width="169" FontSize="24" Click="Button_OpenFile" Background="#FFE6CB4F" Grid.Column="1"/>
        <TextBox x:Name="TextBoxFilePath" HorizontalAlignment="Left" Height="32" Margin="459,78,0,0" TextWrapping="Wrap" Text="Vyber soubor !" VerticalAlignment="Top" Width="507" FontSize="20" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBoxInfo" HorizontalAlignment="Left" Height="54" Margin="34,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" FontSize="20"/>
        <DataGrid x:Name="DataGrid1" HorizontalAlignment="Left" Margin="34,172,0,0" Width="745" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="20" Grid.ColumnSpan="2" MouseLeftButtonUp="DataGrid_MouseLeftButtonUp" IsReadOnly="True" SelectionMode="Single" Height="580" VerticalAlignment="Top" AlternatingRowBackground="#FFFBEFEF" AlternationCount="3" MinColumnWidth="0"/>
        <Button x:Name="Button_Top" Grid.Column="1" Content="Unlocked" HorizontalAlignment="Left" Height="71" Margin="43,681,0,0" VerticalAlignment="Top" Width="169" Click="Button_Top_click" FontSize="20" Background="#FF05E8F9">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
